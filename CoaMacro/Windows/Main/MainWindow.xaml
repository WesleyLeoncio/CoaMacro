<Window x:Class="CoaMacro.Windows.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Macro Automação"
        Height="300" Width="500"
        ResizeMode="NoResize"
        Background="#f0f2f5"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock x:Name="lblNumeroExecucoes"
                   Text="Número de Execuções: 0"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,20"
                   Grid.Row="0"/>

        <!-- Inputs: Coluna / Linha / Repetições -->
        <WrapPanel HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="1">
            <StackPanel Margin="10,0">
                <TextBlock Text="Coluna:" FontWeight="SemiBold" Foreground="#444" Margin="0,0,0,5"/>
                <xctk:IntegerUpDown x:Name="numericPX" Width="80" Height="28" Minimum="1" Maximum="4" Value="1"/>
            </StackPanel>

            <StackPanel Margin="10,0">
                <TextBlock Text="Linha:" FontWeight="SemiBold" Foreground="#444" Margin="0,0,0,5"/>
                <xctk:IntegerUpDown x:Name="numericPY" Width="80" Height="28" Minimum="1" Maximum="50" Value="1"/>
            </StackPanel>

            <StackPanel Margin="10,0">
                <TextBlock Text="Repetições:" FontWeight="SemiBold" Foreground="#444" Margin="0,0,0,5"/>
                <xctk:IntegerUpDown x:Name="numericLoops" Width="80" Height="28" Minimum="1" Maximum="9999" Value="1"/>
            </StackPanel>
        </WrapPanel>

        <!-- Botões -->
        <WrapPanel HorizontalAlignment="Center"
                   Grid.Row="2"
                   Margin="0,0,0,10">
            <Button x:Name="btnIniciar"
                    Content="Iniciar"
                    Style="{StaticResource ModernButtonStyle}"
                    Click="btnStart_Click"
                    Margin="10,0"/>

            <Button x:Name="btnTestar"
                    Content="Testar"
                    Style="{StaticResource DangerButtonStyle}"
                    Click="btnTeste"
                    Margin="10,0"/>
        </WrapPanel>
    </Grid>
</Window>
